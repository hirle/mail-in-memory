{
  "name": "mail-in-memory",
  "version": "1.0.0",
  "description": "Mail In Memory: record emails and query",
  "private": true,
  "workspaces": [
    "api",
    "model",
    "ui"
  ],
  "scripts": {
    "prepare-dist": "run-p copy-api-to-dist copy-ui-to-dist pack-model",
    "copy-api-to-dist": "mkdir -p dist && cp api/dist/*.js dist && cp api/dist/*.json dist && cp api/package.json dist",
    "copy-ui-to-dist": "mkdir -p dist/static && cp -R ui/build/ dist/static",
    "pack-model": "cd model && yarn pack --filename ../dist/mail-in-memory-model.tgz",
    "build": "lerna exec yarn build",
    "start": "cd api && yarn start",
    "test": "lerna exec yarn test",
    "coverage": "lerna exec yarn coverage"
  },
  "author": "Hirle",
  "license": "UNLICENSED",
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
  }
}
